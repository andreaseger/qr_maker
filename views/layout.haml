%head
  %meta{:charset=>"utf-8"}

  %title
    QR Maker
  %meta{:name=>"description", :content=>"Cuba app to generate qr codes"}
  %link{:rel=>"stylesheet", :href=>"/main.css"}
%body
  .container
    %div{:role=>"main"}
      - if show_title?
        %h1= section(:title)
        %form{ :action=>"", :method=>"post", :id=>"generater_form"}
          %p
            %label{:name=>'text'}
              Message
            %input{:type=>"text", :name=>"text"}
          %input{:type=>"submit", :value=>"Generate"}
      = content
